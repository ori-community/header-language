{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Ori 2 Header Language",
    "scopeName": "source.wotwrh",
    "patterns": [
        { "include": "#flags" },
        { "include": "#spawn" },
        { "include": "#timer" },
        { "include": "#uberState" },
        { "include": "#command" },
        { "include": "#annotation" },
        { "include": "#placeholder" },
        { "include": "#comment" }
    ],
    "repository": {
        "flags": {
            "match": "^(Flags:)(\\s*\\w+(?:\\s*,\\s*\\w+)*)?\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "spawn": {
            "match": "^(Spawn:)(\\s*-?\\d+(?:[,.]\\d+)?\\s*,\\s*-?\\d+(?:[,.]\\d+)?)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "timer": {
            "match": "^(timer:)(\\s*\\d+\\|\\d+)(\\|)(\\d+\\|\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" },
                "3": { "name": "variable.other.enummember" },
                "4": { "name": "variable" }
            }
        },
        "uberState": {
            "begin": "^(!)?(\\d+\\|\\d+(?:=\\d+)?\\|)",
            "end": "$|(?=//)",
            "beginCaptures": {
                "1": { "name": "keyword" },
                "2": { "name": "keyword.control" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "pickup": {
            "patterns": [
                { "include": "#spiritLight" },
                { "include": "#resource" },
                { "include": "#ability" },
                { "include": "#shard" },
                { "include": "#syscommand" },
                { "include": "#teleporter" },
                { "include": "#message" },
                { "include": "#setUberState" },
                { "include": "#water" },
                { "include": "#bonusItem" },
                { "include": "#bonusUpgrade" },
                { "include": "#relic" },
                { "include": "#progressMessage" },
                { "include": "#wheelCommand" },
                { "include": "#shopCommand" },
                { "include": "#placeholder" }
            ]
        },
        "spiritLight": {
            "match": "\\G(0\\|)(-?\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "resource": {
            "match": "\\G1\\|[0-4]\\b",
            "name": "variable.other.enummember"
        },
        "ability": {
            "match": "\\G2\\|-?([03589]|1[45]|23|5[17]|62|7[47]|9[78]|1(0[0124689]|1[4568]|2[01]))\\b",
            "name": "variable.other.enummember"
        },
        "shard": {
            "match": "\\G3\\|-?([1234589]|1[3489]|2[235678]|3[02345689]|4[013467])\\b",
            "name": "variable.other.enummember"
        },
        "syscommand": {
            "patterns": [
                { "include": "#autosave" },
                { "include": "#setResource" },
                { "include": "#statue" },
                { "include": "#warp" },
                { "include": "#applier" },
                { "include": "#setPlayerResource" },
                { "include": "#setSpiritLight" },
                { "include": "#equip" },
                { "include": "#keybind" },
                { "include": "#if" },
                { "include": "#setSync" },
                { "include": "#createWarp" },
                { "include": "#destroyWarp" },
                { "include": "#ifbounds" },
                { "include": "#ifself" }
            ]
        },
        "autosave": {
            "match": "\\G4\\|[02]\\b",
            "name": "variable.other.enummember"
        },
        "setResource": {
            "match": "\\G(4\\|1\\|[0-4]\\|)(\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "statue": {
            "match": "\\G4\\|7\\|0\\|[01]\\b",
            "name": "variable.other.enummember"
        },
        "warp": {
            "match": "\\G(4\\|8\\|)(-?\\d+(?:[.,]\\d+)?\\|-?\\d+(?:[.,]\\d+)?)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "applier": {
            "match": "\\G(4\\|11\\|)(-?\\d+\\|-?\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "setPlayerResource": {
            "match": "\\G(4\\|1[23]\\|)(\\d+(?:[.,]\\d+)?)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "setSpiritLight": {
            "match": "\\G(4\\|14\\|)(-?\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "equip": {
            "match": "\\G4\\|15\\|[0-2]\\|(?:100[0-5]|20[01]\\d|300[0-5]|400\\d)\\b",
            "name": "variable.other.enummember"
        },
        "keybind": {
            "match": "\\G(4\\|16\\|)(\\w+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "if": {
            "begin": "\\G(4\\|1[7-9]\\|)(\\d+\\|\\d+\\|-?\\d+(?:[.,]\\d+)?\\|)\\b",
            "end": "$|(?=//)",
            "beginCaptures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "keyword.control" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "setSync": {
            "match": "\\G(4\\|2[01]\\|)(\\d+\\|\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "createWarp": {
            "match": "\\G(4\\|22\\|)(\\d+\\|-?\\d+(?:[.,]\\d+)?\\|-?\\d+(?:[.,]\\d+)?)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "destroyWarp": {
            "match": "\\G(4\\|23\\|)(\\d+)\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "variable" }
            }
        },
        "ifbounds": {
            "begin": "\\G(4\\|24\\|)((?:-?\\d+(?:[.,]\\d+)?\\|){4})\\b",
            "end": "$|(?=//)",
            "beginCaptures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "keyword.control" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "ifself": {
            "begin": "\\G(4\\|2[5-7]\\|)(-?\\d+(?:[.,]\\d+)?\\|)\\b",
            "end": "$|(?=//)",
            "beginCaptures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "keyword.control" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "teleporter": {
            "match": "\\G5\\|-?(?:\\d|1[0-7])\\b",
            "name": "variable.other.enummember"
        },
        "message": {
            "begin": "\\G6\\|",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "variable.other.enummember" }
            },
            "patterns": [
                { "include": "#messageString" }
            ]
        },
        "messageString": {
            "patterns": [
                { "include": "#messageFlag" },
                { "include": "#messageLineControl" },
                { "include": "#messageXml" },
                { "include": "#messageUberStatePointer" },
                { "include": "#messagePickupWriter" },
                { "include": "#WHEREIS" },
                { "include": "#HOWMANY" },
                { "include": "#messageColoring" },
                { "include": "#messageNewLine" },
                {
                    "match": ".",
                    "name": "string"
                }
            ]
        },
        "messageFlag": {
            "match": "((\\||\\G)(mute|f=\\d+|instant|quiet|p=\\d+([,.]\\d+)?|noclear))|(mute|f=\\d+|instant|quiet|p=\\d+([,.]\\d+)?|noclear)\\|",
            "name": "variable.other.enummember"
        },
        "messageLineControl": {
            "match": "<\\\\>",
            "name": "string.regexp"
        },
        "messageXml": {
            "begin": "<",
            "end": "$|(?=//)|>",
            "name": "comment"
        },
        "messageUberStatePointer": {
            "match": "\\$\\(\\d+\\|\\d+\\)|\\$\\[\\(\\d+\\|\\d+(=\\d+)?\\)\\]",
            "name": "string.regexp"
        },
        "messagePickupWriter": {
            "begin": "\\$\\[",
            "end": "$|(?=//)|\\]",
            "beginCaptures": {
                "0": { "name": "string.regexp" }
            },
            "endCaptures": {
                "0": { "name": "string.regexp" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "WHEREIS": {
            "begin": "\\$WHEREIS\\(",
            "end": "$|(?=//)|\\)",
            "beginCaptures": {
                "0": { "name": "entity.name.function" }
            },
            "endCaptures": {
                "0": { "name": "entity.name.function" }
            },
            "contentName": "string.regexp",
            "patterns": [
                { "include": "#regex" }
            ]
        },
        "HOWMANY": {
            "begin": "\\$HOWMANY\\(\\d+,",
            "end": "$|(?=//)|\\)",
            "beginCaptures": {
                "0": { "name": "entity.name.function" }
            },
            "endCaptures": {
                "0": { "name": "entity.name.function" }
            },
            "contentName": "string.regexp",
            "patterns": [
                { "include": "#regex" }
            ]
        },
        "regex": {
            "patterns": [
                {
                    "begin": "\\(",
                    "end": "$|(?=//)|\\)",
                    "beginCaptures": {
                        "0": { "name": "string" }
                    },
                    "endCaptures": {
                        "0": { "name": "string" }
                    },
                    "patterns": [
                        { "include": "#regex" }
                    ]
                },
                {
                    "match": "\\\\.",
                    "name": "constant.character.escape"
                },
                {
                    "match": "\\|",
                    "name": "keyword.operator.or.regexp"
                },
                {
                    "match": "[\\[\\]\\{\\}]",
                    "name": "string"
                }
            ]
        },
        "messageColoring": {
            "match": "[*@#\\$]",
            "name": "comment"
        },
        "messageNewLine": {
            "match": "\\\\n",
            "name": "constant.character.escape"
        },
        "setUberState": {
            "patterns": [
                { "include": "#setBoolUberState" },
                { "include": "#setNumberUberState" }
            ]
        },
        "setBoolUberState": {
            "match": "\\G(8\\|)(\\d+\\|\\d+\\|(?:bool|teleporter)\\|(?:true|false))\\b",
            "captures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "entity.name.function" }
            }
        },
        "setNumberUberState": {
            "begin": "\\G(8\\|)(\\d+\\|\\d+\\|(?:byte|int|float)\\|[+-]?)",
            "end": "$|(?=//)|\\s",
            "beginCaptures": {
                "1": { "name": "variable.other.enummember" },
                "2": { "name": "entity.name.function" }
            },
            "patterns": [
                { "include": "#uberStateValue" },
                { "include": "#uberStatePointer" },
                {
                    "begin": "\\G\\[",
                    "end": "$|\\]|(?=//|\\s)",
                    "name": "string.regexp",
                    "patterns": [
                        { "include": "#uberStateValue" },
                        { "include": "#uberStatePointer" },
                        {
                            "begin": ",",
                            "end": "$|(?=(\\]|(?=//)|\\s))",
                            "name": "string.regexp",
                            "patterns": [
                                { "include": "#uberStateValue" },
                                { "include": "#uberStatePointer" }
                            ]
                        }
                    ]
                },
                {
                    "match": "\\|(?:skip=)?\\d+\\b",
                    "name": "variable"
                }
            ]
        },
        "uberStateValue": {
            "match": "\\G\\d+(?:[.,]\\d+)?\\b",
            "name": "entity.name.function"
        },
        "uberStatePointer": {
            "match": "\\G\\$\\(\\d+\\|\\d+\\)",
            "name": "string.regexp"
        },
        "water": {
            "match": "\\G9\\|-?0\\b",
            "name": "variable.other.enummember"
        },
        "bonusItem": {
            "match": "\\G10\\|3[0156]\\b",
            "name": "variable.other.enummember"
        },
        "bonusUpgrade": {
            "match": "\\G11\\|(?:\\d|4[5-9])\\b",
            "name": "variable.other.enummember"
        },
        "relic": {
            "match": "\\G14\\|(?:\\d|1[0-2])\\b",
            "name": "variable.other.enummember"
        },
        "progressMessage": {
            "match": "\\G15\\|(?:[023]|1\\|(?:\\d|1[0-2]))\\b",
            "name": "variable.other.enummember"
        },
        "wheelCommand": {
            "patterns": [
                { "include": "#wheelText" },
                { "include": "#wheelIcon" },
                { "include": "#wheelColor" },
                { "include": "#wheelAction" },
                { "include": "#wheelSticky" },
                { "include": "#wheelSwitch" },
                { "include": "#wheelRemove" },
                { "include": "#wheelClear" }
            ]
        },
        "wheelText": {
            "begin": "\\G16\\|[01]\\|\\d+\\|(?:\\d|1[01])\\|",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "variable.other.enummember" }
            },
            "patterns": [
                { "include": "#messageString" }
            ]
        },
        "wheelIcon": {
            "begin": "\\G16\\|2\\|\\d+\\|(?:\\d|1[01])\\|",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "variable.other.enummember" }
            },
            "patterns": [
                { "include": "#icon" }
            ]
        },
        "icon": {
            "patterns": [
                {
                    "match": "((?:shard|spell|opher|lupo|grom|tuley):)(\\d+)",
                    "captures": {
                        "1": { "name": "entity.name.type" },
                        "2": { "name": "variable" }
                    }
                },
                {
                    "begin": "file:",
                    "end": "$|(?=//)",
                    "beginCaptures": {
                        "0": { "name": "entity.name.type" }
                    },
                    "patterns": [
                        {
                            "match": ".",
                            "name": "string"
                        }
                    ]
                }
            ]
        },
        "wheelColor": {
            "match": "\\G16\\|3\\|\\d+\\|(?:\\d|1[01])\\|\\d+\\|\\d+\\|\\d+\\|\\d+\\b",
            "name": "variable.other.enummember"
        },
        "wheelAction": {
            "begin": "\\G16\\|4\\|\\d+\\|(?:\\d|1[01])\\|[0-3]\\|",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "variable.other.enummember" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "wheelSticky": {
            "match": "\\G16\\|5\\|\\d+\\|(?:true|false)\\b",
            "name": "variable.other.enummember"
        },
        "wheelSwitch": {
            "match": "\\G16\\|6\\|\\d+\\b",
            "name": "variable.other.enummember"
        },
        "wheelRemove": {
            "match": "\\G16\\|7\\|\\d+\\|(:?\\d|1[01])\\b",
            "name": "variable.other.enummember"
        },
        "wheelClear": {
            "match": "\\G16\\|8\\b",
            "name": "variable.other.enummember"
        },
        "shopCommand": {
            "begin": "\\G17\\|0\\|\\d+\\|\\d+\\|",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "variable.other.enummember" }
            },
            "patterns": [
                { "include": "#icon" }
            ]
        },
        "command": {
            "patterns": [
                { "include": "#includeCommand" },
                { "include": "#addCommand" },
                { "include": "#nameCommand" },
                { "include": "#iconCommand" },
                { "include": "#parameterCommand" },
                { "include": "#poolCommand" },
                { "include": "#addpoolCommand" },
                { "include": "#flushCommand" },
                { "include": "#setCommand" },
                { "include": "#ifCommand" },
                { "include": "#endifCommand" }
            ]
        },
        "includeCommand": {
            "match": "^(!!(?:in|ex)clude )(\\w+)",
            "captures": {
                "1": { "name": "keyword" },
                "2": { "name": "variable" }
            }
        },
        "addCommand": {
            "begin": "^(!!(?:add|remove) )(\\d+x\\s*)?",
            "end": "$|(?=//)",
            "beginCaptures": {
                "1": { "name": "keyword" },
                "2": { "name": "variable" }
            },
            "patterns": [
                { "include": "#pickup" }
            ]
        },
        "nameCommand": {
            "begin": "^!!name ",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "keyword" }
            },
            "patterns": [
                { "include": "#pickup" },
                { "include": "#messageString" }
            ]
        },
        "priceCommand": {
            "begin": "^!!price ",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "keyword" }
            },
            "patterns": [
                { "include": "#pickup" },
                {
                    "match": "\\d+",
                    "name": "variable"
                }
            ]
        },
        "iconCommand": {
            "begin": "^!!icon ",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "keyword" }
            },
            "patterns": [
                { "include": "#pickup" },
                { "include": "#icon" }
            ]
        },
        "parameterCommand": {
            "match": "^(!!parameter )(\\w+\\s+)(?:(bool:)(true|false)|(int:)(\\d+)|(float:)(\\d+(?:[,.]\\d+)?)|(string:)(\\w+))\\b",
            "captures": {
                "1": { "name": "keyword" },
                "2": { "name": "variable" },
                "3": { "name": "entity.name.type" },
                "4": { "name": "variable" },
                "5": { "name": "entity.name.type" },
                "6": { "name": "variable" },
                "7": { "name": "entity.name.type" },
                "8": { "name": "variable" },
                "9": { "name": "entity.name.type" },
                "10": { "name": "variable" }
            }
        },
        "poolCommand": {
            "begin": "^!!pool ",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "keyword" }
            },
            "patterns": [
                {
                    "match": ".",
                    "name": "variable"
                }
            ]
        },
        "addpoolCommand": {
            "match": "^(!!addpool )(\\d+x )",
            "captures": {
                "1": { "name": "keyword" },
                "2": { "name": "variable" }
            }
        },
        "flushCommand": {
            "match": "^!!flush",
            "name": "keyword"
        },
        "setCommand": {
            "begin": "^!!set ",
            "end": "$|(?=//)",
            "beginCaptures": {
                "0": { "name": "keyword" }
            },
            "patterns": [
                {
                    "match": ".",
                    "name": "variable"
                }
            ]
        },
        "ifCommand": {
            "match": "^(!!if )(\\w+ (?:true|false|\\d+(?:[,.]\\d+)?))\\b",
            "captures": {
                "1": { "name": "keyword" },
                "2": { "name": "variable" }
            }
        },
        "endifCommand": {
            "match": "^!!endif",
            "name": "keyword"
        },
        "annotation": {
            "match": "^#\\w+",
            "name": "keyword"
        },
        "placeholder": {
            "patterns": [
                { "include": "#take" },
                { "include": "#PARAM" }
            ]
        },
        "take": {
            "match": "!!take",
            "name": "keyword"
        },
        "PARAM": {
            "match": "(\\$PARAM\\()(\\w+)(\\))",
            "captures": {
                "1": { "name": "entity.name.function" },
                "2": { "name": "variable" },
                "3": { "name": "entity.name.function" }
            }
        },
        "comment": {
            "match": "//.*",
            "name": "comment"
        }
    }
}
